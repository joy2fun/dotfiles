<?xml version="1.0"?>
<root>
    <appdef>
        <appname>TERMINAL</appname>
        <equal>com.apple.Terminal</equal>
    </appdef>

    <vkopenurldef>
        <name>KeyCode::VK_OPEN_URL_APP_Terminal</name>
        <url type="file">/Applications/Utilities/Terminal.app</url>
    </vkopenurldef>

    <vkopenurldef>
        <name>KeyCode::VK_OPEN_URL_APP_Safari</name>
        <url type="file">/Applications/Safari.app</url>
    </vkopenurldef>

    <item>
        <name>COMMAND_L x2 to launch Terminal.</name>
        <identifier>private.command_l_x2</identifier>
        <autogen>
            __DoublePressModifier__
            KeyCode::COMMAND_L, KeyCode::COMMAND_L,
            KeyCode::VK_OPEN_URL_APP_Terminal,
        </autogen>
    </item>

    <item>
        <name>COMMAND_R x2 to toggle full screen.</name>
        <identifier>private.command_r_x2</identifier>
        <autogen>
            __DoublePressModifier__
            KeyCode::COMMAND_R, KeyCode::COMMAND_R,
            KeyCode::F, ModifierFlag::COMMAND_L|ModifierFlag::CONTROL_L
        </autogen>
    </item>

    <item>
        <name>OPTION_L x2 to launch Safari.</name>
        <identifier>private.option_l_x2</identifier>
        <autogen>
            __DoublePressModifier__
            KeyCode::OPTION_L, KeyCode::OPTION_L,
            KeyCode::VK_OPEN_URL_APP_Safari,
        </autogen>
    </item>

    <item>
        <name>Control-T for Terminal.</name>
        <identifier>private.control_t_for_terminal</identifier>
        <only>TERMINAL</only>
        <autogen>
            __KeyToKey__
            KeyCode::TAB, ModifierFlag::CONTROL_L,
            KeyCode::CURSOR_RIGHT, ModifierFlag::COMMAND_L|ModifierFlag::SHIFT_L
        </autogen>
    </item>

</root>
